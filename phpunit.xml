<?xml version="1.0"?>
<phpunit bootstrap="tests/bootstrap.php" colors="true" >
    <testsuites>
        <testsuite name="AsasVirtuais WP Framework Tests" >
            <directory prefix="test-" suffix=".php">./tests/</directory>
        </testsuite>
    </testsuites>
	<logging>
		<log type="coverage-html"
			target="tests/coverage"
			showUncoveredFiles="true"
			charset="UTF-8"
			highlight="true"
			lowUpperBound="35"
			highLowerBound="70" />
	</logging>
